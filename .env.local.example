# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# GitHub OAuth App
AUTH_GITHUB_ID=your-github-client-id
AUTH_GITHUB_SECRET=your-github-client-secret

# Allowed User (only this user can access the dashboard)
ALLOWED_USER_EMAIL=your@email.com
ALLOWED_GITHUB_USERNAME=yourusername

# Build-time GitHub Access
# Generate at: https://github.com/settings/tokens/new
# Needs: public_repo scope for fetching content at build time
GITHUB_TOKEN=your-personal-access-token
GITHUB_REPO_OWNER=yourusername